<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <ImageView
        android:id="@+id/imgDebateWorld"
        android:layout_width="123dp"
        android:layout_height="98dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dbworldlogo" />


    <TextView
        android:id="@+id/txtDebateWorld"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:text="Worldwide Debating News, Events and Updates"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgDebateWorld"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/txtSagelyJade"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:text="@string/desc_sagelyjade"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toEndOf="@+id/imgDebateWorld"
        app:layout_constraintTop_toBottomOf="@+id/txtDebateWorld"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/txtArgumentBuilder"
        android:layout_width="274dp"
        android:layout_height="80dp"
        android:text="@string/desc_argumentbuilder"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgArgumentBuilder"
        app:layout_constraintTop_toBottomOf="@+id/txtSagelyJade"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/txtPublicSpeaking"
        android:layout_width="274dp"
        android:layout_height="80dp"
        android:text="Public Speaking &amp; Debating Techniques"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPublicSpeaking"
        app:layout_constraintTop_toBottomOf="@+id/txtArgumentBuilder"
        app:layout_constraintVertical_bias="0.139" />

    <View
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>


    <EditText
        android:id="@+id/txtmenu"
        android:layout_width="273dp"
        android:layout_height="31dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txt_appname"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSagelyJade"
        android:layout_width="123dp"
        android:layout_height="98dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="404dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDebateWorld"
        app:layout_constraintVertical_bias="0.154"
        app:srcCompat="@drawable/sagelyjade" />

    <ImageView
        android:id="@+id/imgArgumentBuilder"
        android:layout_width="123dp"
        android:layout_height="98dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSagelyJade"
        app:srcCompat="@drawable/argumentbuilder" />

    <ImageView
        android:id="@+id/imgPublicSpeaking"
        android:layout_width="123dp"
        android:layout_height="98dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgArgumentBuilder"
        app:srcCompat="@drawable/speaking" />


    <TextView
        android:id="@+id/txtscrollbegin"
        android:layout_width="262dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/black"
        android:text="Quick Tips, Topics and Events"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPublicSpeaking"
        app:srcCompat="@drawable/line"
        tools:layout_editor_absoluteX="66dp" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="405dp"
        android:layout_height="219dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtscrollbegin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtScroll"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="This is some sample text">
            </EditText>
            <EditText
                android:id="@+id/txtScroll2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="This is some sample text">
            </EditText>
            <EditText
                android:id="@+id/txtScroll3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="This is some sample text">
            </EditText>
            <EditText
                android:id="@+id/txtScroll4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="This is some sample text">
            </EditText>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>